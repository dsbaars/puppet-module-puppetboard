# uWSGI puppetboard
# based on http://uwsgi-docs.readthedocs.org/en/latest/Upstart.html
description "uWSGI puppetboard"
start on runlevel [2345]
stop on runlevel [06]

exec uwsgi --master --processes <%= @wsgi_threads -%> --die-on-term --socket :<%= @uwsgi_port -%> --wsgi-file <%= @docroot -%>/wsgi.py
